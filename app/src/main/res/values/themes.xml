<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoneStarCafe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/light_primary</item>
        <item name="materialButtonStyle">@style/Theme.LoneStarCafe.Button</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>
        <item name="popupTheme">@style/Theme.LoneStarCafe.CompactMenu</item>
    </style>

    <style name="Theme.LoneStarCafe.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@drawable/button_color</item>
    </style>

    <style name="Theme.LoneStarCafe.CompactMenu" parent="Theme.MaterialComponents.CompactMenu">
        <item name="android:panelBackground">@color/light_primary</item>
        <item name="android:itemTextAppearance">@style/Theme.LoneStarCafe.CompactMenu.ItemTextStyle</item>
    </style>
    <style name="Theme.LoneStarCafe.CompactMenu.ItemTextStyle" parent="Theme.MaterialComponents.CompactMenu">
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>